<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.sol.mapper.UserMapper">
    <insert id="join" parameterType="com.example.sol.model.User" > <!--id="메소드"-->
        insert into user values(#{userId},#{userPw},#{userName},#{userPh},#{userLang})
    </insert>

    <select id="getPw" parameterType="String" resultType="String">
        select userPw
        from user 
        where userId = #{userId}
    </select>

    <select id="selectUser" parameterType="String" resultType="com.example.sol.model.User">
        select *
        from user 
        where userId = #{userId}
    </select>

    <delete id="withdraw" parameterType="String">
        delete from user where userId=#{userId};       
    </delete>
</mapper>